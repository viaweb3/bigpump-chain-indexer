TZ=Asia/Shanghai
PORT=3333
HOST=localhost
LOG_LEVEL=info
APP_KEY=
NODE_ENV=development
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USER=root
DB_PASSWORD=root
DB_DATABASE=app

# Blockchain Scanner Configuration
# BNB Chain (BSC) RPC URL - Regular node for recent blocks
BSC_RPC_URL=https://bsc-dataseed1.binance.org

# BNB Chain (BSC) Archive RPC URL - For historical blocks (optional)
# Archive nodes can query historical state and events from any block
# Use services like QuickNode, Alchemy, or Ankr for archive nodes
BSC_ARCHIVE_RPC_URL=https://bsc-dataseed1.binance.org

# Contract Addresses (BSC)
CREATE_POOL_ADDRESS_BSC=0x0db4b0a49b52C01c0bC8CB0b22B78836e0Ff01Bc
BONDINGCURVE_ADDRESS_BSC=0xDA267FECC963F2594E9C37AaA5d6BdE04FEc8DCD

# Scanner Settings
SCANNER_START_BLOCK=0
SCANNER_BLOCK_CONFIRMATIONS=12
SCANNER_POLL_INTERVAL=5000
SCANNER_CHUNK_SIZE=1000

# Archive node threshold (in blocks)
# Blocks older than this will use archive RPC if available
# Default: 128 blocks (~6.4 minutes on BSC)
SCANNER_ARCHIVE_THRESHOLD=128

# Webhook Configuration
# Single webhook URL to send events to
WEBHOOK_URL=https://example.com/webhook

# Webhook poll interval (in milliseconds)
# How often to check for new events
WEBHOOK_POLL_INTERVAL=5000

# Webhook retry attempts
# Number of times to retry sending a failed webhook
WEBHOOK_RETRY_ATTEMPTS=3

# Webhook retry delay (in milliseconds)
# Delay between retry attempts
WEBHOOK_RETRY_DELAY=10000

# Webhook timeout (in milliseconds)
# Maximum time to wait for a webhook response
WEBHOOK_TIMEOUT=5000

# SSE Publish Configuration
# Token for authenticating with the SSE publish endpoint
SSE_PUBLISH_TOKEN=